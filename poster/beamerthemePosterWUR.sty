\let\Textsize\normalsize\linespread{1.2}
\def\Head#1{\noindent\hbox to \hsize{\hfil{\LARGE\color{wurwhite} #1}}\bigskip}
\def\LHead#1{\noindent{\large\textbf{\color{wursignblue} #1}} \\ \color{black}}
\def\smallHead#1{\vskip2ex\noindent{\large\textit{\color{wursignblue} #1}} \\ \color{black}}
\def\SubHead#1{\noindent{\large\color{wurwhite} #1}\smallskip}
\def\Title#1{\noindent{\Huge\color{wurwhite} #1}\linespread{1.2}}
\def\Line#1{{{\color{linegray}\rule{\textwidth}{3.5pt}}\bigskip} \newline #1}
\def\Adress#1{\noindent \footnotesize \color{wursignblue}#1}

